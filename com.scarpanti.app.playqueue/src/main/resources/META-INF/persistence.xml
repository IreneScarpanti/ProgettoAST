<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="playqueue-test">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>com.scarpanti.app.playqueue.entity.GenreEntity</class>
        <class>com.scarpanti.app.playqueue.entity.SongEntity</class>
        <class>com.scarpanti.app.playqueue.entity.PlayQueueItemEntity</class>
        
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
    
    <persistence-unit name="playqueue">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>com.scarpanti.app.playqueue.entity.GenreEntity</class>
        <class>com.scarpanti.app.playqueue.entity.SongEntity</class>
        <class>com.scarpanti.app.playqueue.entity.PlayQueueItemEntity</class>
        
    </persistence-unit>

</persistence>